{% extends 'base-back.html.twig' %}

{% block PageTitle %}
    Interface Admin Coachs       
{% endblock %}

{% block stylesheets %}
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
    </style>
{% endblock %}
        
{% block body %}
    
    <h1>List of Coaches</h1>
    
    <table>
        <thead>
            <tr>
                <th style="width: 5%">ID</th>
                <th style="width: 15%">Email</th>
                <th style="width: 10%">Name</th>
                <th style="width: 15%">Certifications</th>
                <th style="width: 15%">Specialty</th>
                <th style="width: 10%">Experience</th>
                <th style="width: 15%">Description</th>
                <th style="width: 15%">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for coach in coaches %}
                <tr>
                    <td>{{ coach.id }}</td>
                    <td>{{ coach.email }}</td>
                    <td>{{ coach.nom }} {{ coach.prenom }}</td>
                    <td><div class="d-flex align-items-center"><img class="rounded-circle" src="{{ asset('uploads/brochures/' ~ coach.Certificates) }}"width="100"><span class="ml-2"></span></div></td>
                    <td>{{ coach.specialite }}</td>
                    <td>{{ coach.experiance }}</td>
                    <td>{{ coach.description }}</td>
                    <td>
                        <a href="{{ path('admin_coach_approve', { 'id': coach.id }) }}">Approve</a>
                        <a href= "{{ path('remove_coach',{'id':coach.id}) }}"><i class="fas fa-trash text-danger"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
