{% extends 'base-front.html.twig' %}
{% block body %}
	<div class="breadcrumb-section breadcrumb-bg">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2 text-center">
					<div class="breadcrumb-text">
						<p>Payment</p>
						<h1>MONEY</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
      <div class="container">  
        <div class="row justify-content-center">  
            <div class="col-11 col-sm-9 col-md-7  
                col-lg-6 col-xl-5 text-center p-0 mt-3 mb-2">  
                <div class="px-0 pt-4 pb-0 mt-3 mb-3">  
                    <form id="form">  
                    <ul id="progressbar">  
                    <li class="active" id="step1">  
                    <strong> Review Order </strong>  
                    <li class="active" id="step2">  
                    <strong> Adress </strong>  
                    </li>  
                    </li>  
                    <li class="active" id="step3">  
                    <strong> Payment </strong>  
                    </li>  
                    <li id="step4"> <strong> Place Order </strong> </li>  
                        </ul>  
                    </form>  
                </div>  
            </div>  
        </div>  
    </div>  

					<div class="col-lg-4">
                    <table class="order-details">
							<thead>
								<tr>
									<th>Name</th>
									<th>Price</th>
                                    <th>Quantity</th>
								</tr>
							</thead>
							<tbody class="order-details-body">
                                {% for item in items %}
								<tr class="table-body-row">
									<td>{{item.Article.nom}}</td>
									<td class="product-price">{{item.Article.prix}}DT</td>
									<td class="product-quantity"> {{item.quantity}}</td>           
								</tr>

                                {% endfor %}
                                </table>
					<div class="order-details-wrap" style="margin-left:150%;" >
						<a href="{{ path('app_stripe') }}" class="boxed-btn">Payer {{total}}DT </a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}


