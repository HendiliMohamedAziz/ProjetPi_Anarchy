{% block body %}
<h2><center><mark>Liste de mes clubs</mark></center></h2>
    <div class="container mt-5">
        <div class="table-responsive">
            <table class="table table-striped  table-hover">
                <thead>
                    <tr>
                        <th colspan="2">Nom Club</th>
                        <th>Image</th>
                        <th>Télephone</th>
                        <th>Type Activité</th>
                        <th>Actions</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                
                    {% for s in  tabClub %}
                        <tr>
                            <td colspan="2">
                                 <h6>{{s.nom}}</h6>
                            </td>
                            <td>
                                <div class="d-flex align-items-center"><img class="rounded-circle" src="{{ asset('uploads/articles/' ~ s.image) }}"width="100"><span class="ml-2"></span></div>
                            </td>
                            <td>{{s.telephone}}<br></td>
                            <td class="font-weight-bold">{{s.typeActivite}}</td>
                            
                            <td>
                                <a href= "{{ path('remove_club',{'id':s.id}) }}"  ><i class="fas fa-trash text-danger"></i></a>
                                <a href= "{{ path('update_club',{'id':s.id}) }}"><i class="fas fa-edit text-primary"></i> </a> 
                            </td>
                        </tr>
                    {% endfor %}    
                        
                </tbody>
            </table>
        </div>
    </div>
<a href="{{ path('add_club') }}" class="btn btn-primary">Ajouter un club</a>

{% endblock %}


