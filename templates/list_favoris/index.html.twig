{% extends 'base-front.html.twig' %}
{% block body  %} 	
<div class="breadcrumb-section breadcrumb-bg" >
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="breadcrumb-text">
                        <p>Join Bour la forme to make your life easier</p>
                        <h1><i class="fa fa-cart-arrow-down" aria-hidden="true"></i></h1>
                    </div>
                </div>
            </div>
        </div>
</div>

<!-- list -->
	<div class="cart-section mt-150 mb-150">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 col-md-12">
                {% if items|length == 0 %}
                    <div class="row border-top border-bottom">
                    <div class="row main align-items-center">
                   
                        <div class="col">
                            <i class="fa fa-cart-arrow-down" aria-hidden="true"></i>
                            <h4>Votre List des favoris est vide!</h4>
                            <h4>Parcourez nos catégories et découvrez nos meilleures offres! </h4>
                          <a href="{{ path('list_article2')}}" class="boxed-btn">Start Shopping</a>

                     </div>
                   
                    </div>
             </div>
             {% else %}
					<div class="cart-table-wrap">
						<table class="cart-table">
							<thead class="cart-table-head">
								<tr class="table-head-row">
									<th class="product-remove"></th>
									<th class="product-image">Product Image</th>
									<th class="product-name">Name</th>
									<th class="product-price">Price</th>
                                    <th>Action</th>

								</tr>
							</thead>
							{% for item in items %}
								<tr class="table-body-row">
									<td class="product-remove"><a href="{{ path('list_remove',{'id' : item.Article.id} ) }}"><i class="far fa-window-close"></i></a></td>
    <td><img src="{{ asset('uploads/articles/' ~ item.Article.image ) }}" alt="" width="200" height="200"></td>
									<td class="product-name">{{item.Article.nom}}</td>
									<td class="product-price">{{item.Article.prix}} Dt</td>      
                                    <td><a href="{{ path('panier_add',{'id':item.Article.id}) }}"><i class="fas fa-shopping-cart"></i></a>
                                 
								</tr>
                                {% endfor %}

						</table>
					</div>
				</div>
						<div class="cart-buttons">
							<td><a href="{{ path('list_article2')}}"class="boxed-btn">Add To List</a></td>
						</div>
                         </table>
					</div>
                             {% endif %}

				</div>
			</div>
		</div>
	</div>
	<!-- end cart -->
{% endblock %}