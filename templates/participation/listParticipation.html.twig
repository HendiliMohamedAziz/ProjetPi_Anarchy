{% block body %}



<div class="breadcrumb-section breadcrumb-bg" >
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="breadcrumb-text">
                        <p>Join Bour la forme to make your life easier</p>
                        <h1>Mes Clubs</h1>
                    </div>
                </div>
            </div>
        </div>
</div>

<div class="container mt-5">
    
    <div class="table-responsive">
        <table class="table table-striped  table-hover">
            <thead>
                    <tr>
                        <th><mark> Nom Club</mark></th>
                        <th><mark>Date d√©but participation</mark></th>
                        <th><mark>Date Fin participation</mark></th>
                        <th><mark>Actions</mark></th>
                      
                    </tr>
            </thead>
            <tbody>
                {% for i in  tabParticipation %}

                    <tr>
                        <td>{{i.getIdClub()}} </td>
                            
                        <td class="font-weight-bold">{{i.DateDebut|date('d/m/Y')}} </td>
                        <td class="font-weight-bold">{{i.DateFin|date('d/m/Y ')}}   </td>
                        <td>
                            <a href= "{{ path('remove_participation',{'id':i.id}) }}"><i class="fas fa-trash text-danger"></i></a>
                            <a href= "{{ path('update_participation',{'id':i.id}) }}"><i class="fas fa-edit text-primary"></i></a> 
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
   
