{% extends 'base-front.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
<div class="breadcrumb-section breadcrumb-bg" >
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2 text-center">
					<div class="breadcrumb-text">
						<p>Join Bour la forme to make your life easier</p>
						<h1>Log In</h1>
					</div>
				</div>
			</div>
		</div>
</div>
<section class="login spad" style="background-image: url('front-office/assets/img/logininterface.jpg');" style="background-size:cover;">
        <div class="container" style="background-color: transparent;">
            <div class="row">
                <div class="col-lg-6">
                    <div class="login__form">
                        <h3>Login</h3>
                        <form method="post">
                            {% if app.user %}
                                <div class="mb-3">
                                    <div style="color: white; font-size: 16px">You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}" style="color: #ffe200;">Logout</a></div>
                                </div>
                            {% endif %}
                            <div class="input__item">
                                <input type="email" value="{{ last_username }}" placeholder="Email address" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                                <span class="icon_mail"><i class="fas fa-envelope"></i></span>
                            </div>
                            <div class="input__item">
                                <input type="password" placeholder="Password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                                <input type="hidden" name="_csrf_token"
                                    value="{{ csrf_token('authenticate') }}"
                                >
                                <span class="icon_lock"><i class="fas fa-lock"></i></span>
                            </div>
                            <div class="input__item">
                                <a href="{{ path('app_email')}}">forget pass</a>
                            </div>
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            <button type="submit" class="site-btn">Login Now</button>
                        </form>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="login__register">
                        <h3>Dontâ€™t Have An Account?</h3>
                        <a href="{{ path('app_register')}}" class="primary-btn">Register now</a>
                    </div>
                </div>
            </div>
        </div>
</section>


